<div class="column is-one-quarter is-narrow is-fullwidth">
  <h1 class="title is-3"><%= customer.full_name %></h1>
  <% if customer.image.present? %>
    <%= image_tag(customer.image, alt: customer.full_name, size:"400x600") %>
  <% end %>
  <p><strong>Province: </strong><%= customer.notes %></p>
  <p><%= customer.phone_number %></p>
  <p><%= customer.email %></p>
</div>